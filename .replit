modules = ["nodejs-20", "python-3.12"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "SpiralScript Development"

[[workflows.workflow]]
name = "SpiralScript Development"
author = 45468930
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run compile:grammar"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run generate:languages"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
