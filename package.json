{
  "name": "spiral-parser-engine",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run compile:grammar && npm run generate:languages && next build",
    "start": "next start",
    "lint": "next lint",
    "check": "tsc --noEmit",
    
    "compile:grammar": "antlr4ts -Dlanguage=TypeScript -o src/generated grammars/*.g4 || echo 'Grammar compilation failed'",
    "generate:languages": "node scripts/generate-languages.js || echo 'Language generation failed'", 
    "test:parser": "jest --testPathPattern=parser || echo 'Parser tests failed'",
    "test:quantum": "jest --testPathPattern=quantum || echo 'Quantum tests failed'",
    "test:blockchain": "jest --testPathPattern=blockchain || echo 'Blockchain tests failed'",
    "test:ai": "jest --testPathPattern=ai || echo 'AI tests failed'",
    "test:stress": "jest --testPathPattern=stress || echo 'Stress tests failed'",
    
    "db:push": "drizzle-kit push:pg || echo 'Database push failed'",
    "server:dev": "nodemon server/index.js",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node server/dist/index.js",
    
    "pwa:build": "next build && next export",
    "pages:build": "npm run build && touch out/.nojekyll"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "three": "^0.158.0",
    "@types/three": "^0.158.0",
    "framer-motion": "^10.0.0",
    "tailwindcss": "^3.4.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "ws": "^8.14.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.5.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
